{
  "version": 2,
  "installCommand": "npm ci",
  "buildCommand": "npm run build && mkdir -p public && echo '{}' > public/.gitkeep",
  "outputDirectory": "public",
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.ts"
    }
  ]
}
