{
  "version": 2,
  "buildCommand": "npm run vercel:build",
  "installCommand": "npm install && npm run vercel:install",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x",
      "includeFiles": "backend/dist/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
