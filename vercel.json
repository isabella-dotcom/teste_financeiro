{
  "version": 2,
  "buildCommand": "chmod +x vercel-build.sh && bash vercel-build.sh",
  "installCommand": "chmod +x vercel-install.sh && bash vercel-install.sh",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x",
      "includeFiles": "backend/dist/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
